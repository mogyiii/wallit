@using WallIT.Logic.Identity
@using Microsoft.AspNetCore.Mvc.Localization

@inject AppSignInManager SignInManager
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web2</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" />
    </environment>
    <link rel="stylesheet" href="~/lib/wallit/scss/app/app.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/6096ca5492.js"></script>
</head>
<body>

    <div class="menu-container">
        <div class="container">
            <div class="row mt-5">
                <div class="w-100 menu-row-content nobreak text-center menu-title">
                    <!--Title-->
                    <span class="p-0 font-weight-bold">
                        @Localizer["Left Menu"]
                    </span>
                </div>
                <div class="tile-under-line"></div>
            </div>
            <div class="row mt-3">
                <!--Rows-->
                <a href="/List/List" class="w-100">
                    <div class="row m-3">
                        <div class="col-2">
                            <span class="menu-icon">
                                <i class="fas fa-list"></i>
                            </span>
                        </div>
                        <div class="col-9">
                            <div class="menu-row-content nobreak">
                                <span>
                                    @Localizer["List"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="menu-under-line"></div>
                </a>
            </div>
            <div class="row mt-3">
                <!--Rows-->
                <a href="/List/List" class="w-100">
                    <div class="row m-3">
                        <div class="col-2">
                            <span class="menu-icon">
                                <i class="fas fa-list"></i>
                            </span>
                        </div>
                        <div class="col-9">
                            <div class="menu-row-content nobreak">
                                <span>
                                    @Localizer["List"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="menu-under-line"></div>
                </a>
            </div>
        </div>
    </div>
    <div class="header-menu">
        <div class="row align-items-center">
            <div class="col-2">
                <button class="menu-btn m-2">
                    <span class="h3">
                        <i class="fas fa-bars"></i>
                    </span>
                </button>
            </div>

            <div class="col-3 text-lg-right">
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="p-2">

                    </span>
                }
            </div>
        </div>
    </div>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020, - WallIT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <partial name="_SelectLanguagePartial" />
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o">
        </script>
    </environment>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <!--<script src="~/js/notify.min.js" asp-append-version="true"></script>-->
    <script>
        var menuisvisible = true;
        function setUrlactive() {
            var url = window.location.pathname;
            for (var i = 0; i < $(".menu-row").length; i++) {
                var getclass = $(".menu-row:eq(" + i + ")");
                var href = getclass.attr("href");
                if (href == url) {
                    getclass.addClass("active");
                }
            }
        }
        function hidder() {
            if (Cookies.get('hidden') == 'true') {
                $('.footer').css('bottom', '-50px');
                $('.footer-btn').css('transform', 'rotate(0deg)');
            } else if (Cookies.get('hidden') == 'false') {
                $('.footer').css('bottom', '0');
                $('.footer-btn').css('transform', 'rotate(180deg)');
            } else {
                Cookies.set('hidden', 'false');
                $('.footer-btn').css('transform', 'rotate(180deg)');
            }
        }
        $(document).ready(function () {
            setUrlactive();
        });
        $(".menu-btn").click(function () {
            if (menuisvisible) {
                $(".menu-container").css("margin-left", "-310px");
                $(".header-menu").css("margin-left", "0px");
                $(".header-menu").css("width", "100%");
                menuisvisible = false;
            } else {
                $(".menu-container").css("margin-left", "0px");
                $(".header-menu").css("margin-left", "300px");
                $(".header-menu").css("width", "calc(100% - 300px)");
                menuisvisible = true;
            }

        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
